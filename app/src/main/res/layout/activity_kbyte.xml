<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kbyte">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converter Byte To"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/textView2"
        android:text="Kilo Byte :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="20dp"

        />

    <EditText
        android:id="@+id/edtKbyte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="20"
        android:layout_marginLeft="90dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:hint=" Masukkan Kbyte"
        />

    <Button
        android:id="@+id/btnKonvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konvert"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:text="Bit           : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_Result_Bit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Bit"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="180dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView4"
        android:text="Byte        : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_Result_Byte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Byte"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="210dp"
        android:textStyle="bold"/>

</RelativeLayout>
